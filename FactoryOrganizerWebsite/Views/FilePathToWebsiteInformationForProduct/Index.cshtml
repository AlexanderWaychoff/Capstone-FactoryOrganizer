@model IEnumerable<FactoryOrganizerWebsite.Models.FilePathToWebsiteInformationForProduct>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CellNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WholeFilePath)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CellNumber)
        </td>
        <td>
            <img src="@Url.Content(item.WholeFilePath + @"\" + item.ItemNumber +".png")"/>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.FilePathToWebsiteInformationForProductID }) |
            @Html.ActionLink("Details", "Details", new { id=item.FilePathToWebsiteInformationForProductID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.FilePathToWebsiteInformationForProductID })
        </td>
    </tr>
}

</table>
